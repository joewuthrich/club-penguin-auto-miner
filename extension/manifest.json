{
  "manifest_version": 2,
  "name": "CPR Miner",
  "version": "1.0",
  "description": "Automatically mines for coins in CPR",

  "icons": {
    "48": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://play.cprewritten.net/*"],
      "js": ["main.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "cprminer@projects.joewuthrich.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icon-disabled.png"
    },
    "default_title": "CPR Miner",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["storage"]
}
